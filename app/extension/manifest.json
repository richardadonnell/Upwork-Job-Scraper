{
  "manifest_version": 3,
  "name": "Upwork Job Scraper",
  "version": "2.0.0",
  "description": "Upwork Job Scraper v2 - Completely rewritten, from the ground up!",
  "icons": {
    "48": "dist/icon48.png",
    "128": "dist/icon128.png"
  },
  "action": {
    "default_title": "Upwork Job Scraper v2"
  },
  "background": {
    "service_worker": "dist/background/worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.upwork.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/src/content/dom-inject.js"
      ],
      "matches": [
        "https://www.upwork.com/*"
      ]
    }
  ]
}