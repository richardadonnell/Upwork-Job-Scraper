{
  "manifest_version": 3,
  "name": "Upwork Job Scraper v2",
  "version": "0.1.0",
  "description": "Rewritten Upwork job scraper (v2) â€” TypeScript + React + Tailwind + Sentry + Cheerio",
  "action": {
    "default_title": "Upwork Job Scraper v2"
  },
  "background": {
    "service_worker": "src/background/worker.ts"
  },
  "permissions": ["storage", "tabs", "scripting", "alarms"],
  "host_permissions": ["https://www.upwork.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["src/content/content.ts"],
      "matches": ["https://www.upwork.com/*"]
    }
  ]
}
